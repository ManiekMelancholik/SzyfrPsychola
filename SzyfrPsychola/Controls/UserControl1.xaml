<UserControl x:Class="SzyfrPsychola.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SzyfrPsychola"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Courier New"
             FontSize="20"
             Height="250"
             Width="500"
             Background="#FF2D2C2C"
             Padding="10"
             
             
             
             >
    <Grid x:Name="grid" Margin="10">
       

        <StackPanel  >
            <Label  Content="Wprowadź kod dostępu" Height="40"/>
            <TextBox x:Name="inp"  Text="{Binding input, Mode=OneWay}" Background="#FF575558" Foreground="DarkOrange" Height="auto"/>
            <Button x:Name="button"   Content="Zatwierdź kod"  Background="DarkOrange" FontWeight="Heavy" Height="40"/>
            <TextBlock x:Name="textBlock"  TextWrapping="Wrap" Text="{Binding output, Mode=OneWay}" Foreground="DarkOrange"  Background="Black"/>


        </StackPanel>
       
        



    </Grid>
</UserControl>
